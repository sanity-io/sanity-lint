{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "GROQ",
  "scopeName": "source.groq",
  "patterns": [
    { "include": "#comments" },
    { "include": "#strings" },
    { "include": "#numbers" },
    { "include": "#constants" },
    { "include": "#operators" },
    { "include": "#keywords" },
    { "include": "#functions" },
    { "include": "#system-fields" },
    { "include": "#variables" },
    { "include": "#punctuation" }
  ],
  "repository": {
    "comments": {
      "patterns": [
        {
          "name": "comment.line.double-slash.groq",
          "match": "//.*$"
        }
      ]
    },
    "strings": {
      "patterns": [
        {
          "name": "string.quoted.double.groq",
          "begin": "\"",
          "end": "\"",
          "patterns": [
            {
              "name": "constant.character.escape.groq",
              "match": "\\\\."
            }
          ]
        },
        {
          "name": "string.quoted.single.groq",
          "begin": "'",
          "end": "'",
          "patterns": [
            {
              "name": "constant.character.escape.groq",
              "match": "\\\\."
            }
          ]
        }
      ]
    },
    "numbers": {
      "patterns": [
        {
          "name": "constant.numeric.float.groq",
          "match": "\\b\\d+\\.\\d+([eE][+-]?\\d+)?\\b"
        },
        {
          "name": "constant.numeric.integer.groq",
          "match": "\\b\\d+\\b"
        }
      ]
    },
    "constants": {
      "patterns": [
        {
          "name": "constant.language.boolean.true.groq",
          "match": "\\btrue\\b"
        },
        {
          "name": "constant.language.boolean.false.groq",
          "match": "\\bfalse\\b"
        },
        {
          "name": "constant.language.null.groq",
          "match": "\\bnull\\b"
        }
      ]
    },
    "operators": {
      "patterns": [
        {
          "name": "keyword.operator.dereference.groq",
          "match": "->"
        },
        {
          "name": "keyword.operator.comparison.groq",
          "match": "==|!=|>=|<=|>|<"
        },
        {
          "name": "keyword.operator.logical.groq",
          "match": "\\b(&&|\\|\\||!)\\b|&&|\\|\\|"
        },
        {
          "name": "keyword.operator.arithmetic.groq",
          "match": "[+\\-*/%]"
        },
        {
          "name": "keyword.operator.spread.groq",
          "match": "\\.\\.\\."
        },
        {
          "name": "keyword.operator.range.groq",
          "match": "\\.\\."
        },
        {
          "name": "keyword.operator.match.groq",
          "match": "\\bmatch\\b"
        },
        {
          "name": "keyword.operator.in.groq",
          "match": "\\bin\\b"
        }
      ]
    },
    "keywords": {
      "patterns": [
        {
          "name": "keyword.control.groq",
          "match": "\\b(order|asc|desc)\\b"
        },
        {
          "name": "keyword.other.groq",
          "match": "\\b(references|defined|path)\\b"
        },
        {
          "name": "variable.language.this.groq",
          "match": "\\*|@|\\^"
        }
      ]
    },
    "functions": {
      "patterns": [
        {
          "name": "support.function.namespace.groq",
          "match": "\\b(array|dateTime|geo|global|math|pt|sanity|string|text)\\s*::"
        },
        {
          "name": "support.function.builtin.groq",
          "match": "\\b(count|defined|coalesce|select|length|lower|upper|now|round|string|references|dateTime|boost|score|order|identity|path)\\s*(?=\\()"
        },
        {
          "name": "support.function.namespace-function.groq",
          "match": "::\\s*(text|distance|sum|avg|min|max|unique|compact|join|split|startsWith|projectId|dataset|query)\\s*(?=\\()"
        }
      ]
    },
    "system-fields": {
      "patterns": [
        {
          "name": "variable.language.system.groq",
          "match": "\\b(_id|_type|_rev|_createdAt|_updatedAt|_key|_ref|_weak|_strengthenOnPublish)\\b"
        }
      ]
    },
    "variables": {
      "patterns": [
        {
          "name": "variable.parameter.groq",
          "match": "\\$[a-zA-Z_][a-zA-Z0-9_]*"
        },
        {
          "name": "variable.other.groq",
          "match": "\\b[a-zA-Z_][a-zA-Z0-9_]*\\b"
        }
      ]
    },
    "punctuation": {
      "patterns": [
        {
          "name": "punctuation.definition.block.groq",
          "match": "[{}]"
        },
        {
          "name": "punctuation.definition.array.groq",
          "match": "[\\[\\]]"
        },
        {
          "name": "punctuation.definition.parameters.groq",
          "match": "[()]"
        },
        {
          "name": "punctuation.separator.groq",
          "match": "[,:]"
        },
        {
          "name": "punctuation.accessor.groq",
          "match": "\\."
        }
      ]
    }
  }
}
