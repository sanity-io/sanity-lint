{
  "name": "vscode-groq",
  "displayName": "GROQ",
  "description": "GROQ language support with linting, completion, and formatting for Sanity projects",
  "version": "0.0.1",
  "publisher": "sanity-io",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/sanity-io/sanity-lint"
  },
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Programming Languages",
    "Linters",
    "Formatters",
    "Snippets"
  ],
  "keywords": [
    "groq",
    "sanity",
    "query",
    "cms"
  ],
  "activationEvents": [
    "onLanguage:groq",
    "onLanguage:typescript",
    "onLanguage:typescriptreact",
    "onLanguage:javascript",
    "onLanguage:javascriptreact"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "languages": [
      {
        "id": "groq",
        "aliases": [
          "GROQ",
          "groq"
        ],
        "extensions": [
          ".groq"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "groq",
        "scopeName": "source.groq",
        "path": "./syntaxes/groq.tmLanguage.json"
      },
      {
        "injectTo": [
          "source.js",
          "source.jsx",
          "source.ts",
          "source.tsx"
        ],
        "scopeName": "inline.groq",
        "path": "./syntaxes/groq-injection.tmLanguage.json",
        "embeddedLanguages": {
          "meta.embedded.block.groq": "groq"
        }
      }
    ],
    "snippets": [
      {
        "language": "groq",
        "path": "./snippets/groq.json"
      },
      {
        "language": "typescript",
        "path": "./snippets/groq-ts.json"
      },
      {
        "language": "typescriptreact",
        "path": "./snippets/groq-ts.json"
      },
      {
        "language": "javascript",
        "path": "./snippets/groq-ts.json"
      },
      {
        "language": "javascriptreact",
        "path": "./snippets/groq-ts.json"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "GROQ",
      "properties": {
        "groq.enable": {
          "type": "boolean",
          "default": true,
          "description": "Enable GROQ language features"
        },
        "groq.schemaPath": {
          "type": "string",
          "default": "",
          "description": "Path to schema.json file (auto-detected if not set)"
        },
        "groq.maxDiagnostics": {
          "type": "number",
          "default": 100,
          "description": "Maximum number of diagnostics to report per file"
        },
        "groq.enableFormatting": {
          "type": "boolean",
          "default": true,
          "description": "Enable GROQ formatting"
        },
        "groq.trace.server": {
          "type": "string",
          "enum": [
            "off",
            "messages",
            "verbose"
          ],
          "default": "off",
          "description": "Traces the communication between VS Code and the GROQ language server"
        }
      }
    },
    "commands": [
      {
        "command": "groq.restartServer",
        "title": "GROQ: Restart Language Server"
      },
      {
        "command": "groq.showOutput",
        "title": "GROQ: Show Output Channel"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "pnpm run build",
    "build": "tsup",
    "watch": "tsup --watch",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vitest run --config ../../vitest.config.ts",
    "test:watch": "vitest --config ../../vitest.config.ts",
    "package": "vsce package --no-dependencies",
    "publish": "vsce publish --no-dependencies"
  },
  "dependencies": {
    "vscode-languageclient": "^9.0.1"
  },
  "devDependencies": {
    "@sanity/groq-lsp": "workspace:*",
    "@types/vscode": "^1.85.0",
    "@vscode/vsce": "^2.22.0",
    "tsup": "^8.0.1",
    "typescript": "^5.3.3",
    "vitest": "^1.1.3"
  }
}
